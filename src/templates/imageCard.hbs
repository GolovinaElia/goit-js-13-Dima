



<li id={{id}}>
<div class="photo-card">
  <img width="300" height="180" src={{previewURL}} alt={{tags}} data-source={{largeImageURL}}/>

  <div class="stats">
    <p class="stats-item">
      <i class="material-icons">thumb_up</i>
      Like stats: {{likes}}
    </p>
    <p class="stats-item">
      <i class="material-icons">visibility</i>
      Views stats: {{views}}
    </p>
    <p class="stats-item">
      <i class="material-icons">comment</i>
      Comments: {{comments}}
    </p>
    <p class="stats-item">
      <i class="material-icons">cloud_download</i>
      Downloads: {{downloads}}
    </p>
  </div>
</div>
</li>